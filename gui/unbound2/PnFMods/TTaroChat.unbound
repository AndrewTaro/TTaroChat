(def element TTChat_CombatLogMessageRendererStandard(_messageEntity:gfx, _userPrefsNum:gfx=null) layout=true
	(scope
		(macro TTChat_GET_ORIGINAL_DATA)
		(macro TTChat_GET_MOD_DATA)

		(macro TTChat_GET_SHIP_ICON_PREFIX	_varName="'shipIconPrefix'")
		(macro TTChat_GET_SHIP_ICON_POSTFIX _varName="'shipIconPostfix'")
		(var senderShip:str = "
			originalSenderShip && (!isSelf || isOwnShipNameVisible)
				?	(isShipIconVisible ? ('[' + shipIconPrefix + shipIconPostfix + ']') : '') +
					(isShipTierVisible ? (tier + ' ') : '') +
					(isShipNameVisible ? shipNameUpper : '')
				:	''
		")

		# senderText Name
		(var marginText:str = "senderName && senderShip && !isShipIconVisible ? ' ' : ''")
		(var senderText:str = "!(senderName || senderShip)	? ''
															: senderName + marginText + senderShip + ': '
		")

		# subst(TTChat_BASE_HTML, [], {color: senderColor,	weight: senderFontWeight,	size: senderFontSize,	message: senderText})
		# sender font size is disable if standard style is selected. Use message font size instead.
		(var senderHtml:str = "
			senderText	? '<font color=\"' + senderColor + '\" size=\"' + messageFontSize +'\"><span class=\"' + senderFontWeight + '\">' + senderText + '</span></font>'
						: ''
		")
		# subst(TTChat_BASE_HTML, [], {color: messageColor,	weight: messageFontWeight,	size: messageFontSize,	message: message})
		(var messageHtml:str = "'<font color=\"' + messageColor + '\" size=\"' + messageFontSize +'\"><span class=\"' + messageFontWeight + '\">' + message + '</span></font>'")
		(var htmlText:str = "'<body>' + senderHtml + messageHtml + '</body>'")
		#
	)

	(macro TTChat_CONTEXT_MENU)

	# Mod
	(block
		(style
			(width = 100%)
			(marginLeft = 4px)
			(marginRight = 4px)
			(marginTop = -1px)
			(hitTest = false)
		)

		# Main
		(tf
			(style
				(width = 100%)
				(leading = -3)
				(styleSheet = "TTChat_STYLE_SHEET")
			)
			
			(class $TTChat_MessageText)
			(bind htmlText "htmlText")
			(bindcall substitute imageOffset="messageImageOffset" substitutionMap="imageSubsts" sourceText="htmlText" init=true)
			# Can't use both of senderImageOffset and messageImageOffset because this is a single line message.
		)
	)
	#
)

